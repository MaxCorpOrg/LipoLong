generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Visit {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  ip         String?
  userAgent  String?
  path       String
  query      String?
  referrer   String?
  utmSource  String?
  utmMedium  String?
  utmCampaign String?
  sessionId  String?

  @@index([createdAt])
  @@index([sessionId])
  @@index([ip])
}

model Lead {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  phone     String
  email     String
  message   String?
  sessionId String?

  @@index([createdAt])
  @@index([sessionId])
}

model OutboundClick {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  fromPath  String
  toUrl     String
  sessionId String?

  @@index([createdAt])
  @@index([sessionId])
}
